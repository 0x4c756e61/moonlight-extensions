{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "jsx": "react",
    "baseUrl": "./src/",
    "paths": {
      "@ruffle/*": ["../extern/ruffle/web/packages/core/src/*"]
    }
  },
  "include": ["./src/**/*", "./env.d.ts", "./extern/ruffle/web/packages/core/src/**/*"]
}
